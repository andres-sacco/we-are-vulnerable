pipeline {
    agent any
    tools {
        maven 'Maven 3.3.3'
    }
    stages {
        stage('Compile') {
            steps {
                dir('api-catalog') {
                    sh 'mvn clean compile'
                }
            }

        }
        stage('Unit Test') {
            steps {
                dir('api-catalog') {
                    sh 'mvn test'
                }
            }
        }
        stage('Package') {
            steps {
                dir('api-catalog') {
                    sh 'mvn package'
                }
            }
        }
        stage('OWASP Dependency-Track Vulnerabilities') {
            steps {
                dir('api-catalog') {
                    sh 'mvn -B -DskipTests package'
                    dependencyTrackPublisher artifact: 'target/bom.xml', projectId: 'bdec1b19-3eff-4bed-942d-783da672de58', synchronous: true, dependencyTrackApiKey: 'yDa8TWCJR50r3gDV5gBFMFV6aQ4J2y9Z'
                }
            }
        }
    }
}
